{
  "set_fqdn": "app.ru",

  "users": ["app"],

  "nginx": {
    "version"                       : "1.2.4",
    "worker_processes"              : 2,
    "worker_connections"            : 1024,
    "user"                          : "www-data",
    "server_names_hash_bucket_size" : "64",
    "keepalive_timeout"             : "30",
    "default_site_enabled"          : false,

    "modules": [
      "http_stub_status_module",
      "http_ssl_module",
      "http_gzip_static_module"
    ],

    "gzip_types": [
      "text/plain",
      "text/html",
      "text/css",
      "text/xml",
      "text/javascript",
      "application/json",
      "application/x-javascript",
      "application/xml",
      "application/xml+rss"
    ]
  },

  "apps": [
    {
      "name": "app",
      "user": "app",
      "server_name": "app.ru"
    }
  ],

  "unicorn": {
    "installs": [
      {
        "app_root" :  "/home/app/app",
        "service"  :  "unicorn-app",
        "user"     :  "app",
        "group"    :  "www-data"
      }
    ],
    "config": {
      "generate": false
    }
  },

  "mysql": {
    "server_root_password": "sacredroot"
  },

  "recipes": [
    "hostname",
    "locale",
    "user::data_bag",
    "nginx::source",
    "rails",
    "unicorn",
    "mysql::server",
    "imagemagick"
  ]
}
